{
  "compilerOptions": {
    "outDir": "./public/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "./src/fortress/abstract/containers/*",
        "./src/fortress/flytrap/pages/*",
        "./src/fortress/buttons/*"
      ]
    }
  },
  "strict": false,
  "plugins": [
    {
      "name": "typescript-strict-plugin"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
